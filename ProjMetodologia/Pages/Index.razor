@page "/Index"

<PageTitle>Index</PageTitle>

<h1>Bienvenido a nuestra aplicación</h1>

<div class="cardContainer">
    @foreach (var teamMember in teamMembers)
    {
        <div class="cardPerson">
            <img class="cardPerson-image" src="@teamMember.GitHubImage" alt="@teamMember.Name" />

            <div class="cardPerson-content">
                <h4>@teamMember.Name</h4>
                    <h4>@teamMember.Role</h4>

                <mat-chip-listbox>
                    @foreach (var skill in GetSkills(teamMember.Skills))
                    {
                        <mat-chip class="chip">@skill.Name</mat-chip>
                    }
                </mat-chip-listbox>
            </div>
        </div>
    }
</div>


